{% extends 'layouts.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form method="POST" action="/organisations">
        <h1 class="govuk-heading-l">Choose a business</h1>
        {% if message %}
          <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
              There is a problem
            </h2>
            <div class="govuk-error-summary__body">
              <ul class="govuk-list govuk-error-summary__list">
                <span class="govuk-error-message">
                  <span class="govuk-visually-hidden">Error:</span>
                  {{ message }}
                </span>
              </ul>
            </div>
          </div>
        {% endif %}

        <p class="govuk-body">These are the businesses registered to your rural payments account including their single business identifier (SBI).</p>

        {% set radioItems = [] %}
        {% for org in organisations %}
          {% set item = {
            value: org.sbi,
            text: org.name + " - SBI " + org.sbi
          } %}
          {% set radioItems = (radioItems.push(item), radioItems) %}
        {% endfor %}

        {{ govukRadios({
          name: "sbi",
          items: radioItems
        }) }}

        {{ govukButton({
          text: "Continue",
          attributes: {
            id: "submit"
          }
        }) }}

      </form>

      <details class="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            Help signing in
          </span>
        </summary>
        <div class="govuk-details__text">
          <p class="govuk-body">Contact the Rural Payments Agency by email or phone.</p>

          <p class="govuk-body">Email:<br><a class="govuk-link" href="mailto:testing@farming.gov.uk">testing@farming.gov.uk</a></p>
          <p class="govuk-body">Telephone:<br>0300 000 0000</p>
          <p class="govuk-body">Service opening times:<br>09:00 AM to 05:00 PM</p>

          <p class="govuk-body"><a class="govuk-link" href="https://www.gov.uk/call-charges" target="_blank">Find out about call charges (opens in new tab)</a></p>
        </div>
      </details>
    </div>
  </div>
{% endblock %}
